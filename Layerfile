# This is a webapp.io configuration for Docker with GrowBot
FROM vm/ubuntu:18.04

# Install Docker
RUN apt-get update && apt-get install -y \
    ca-certificates \
    curl \
    gnupg \
    lsb-release \
    sudo && \
    sudo mkdir -p /etc/apt/keyrings && \
    curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo gpg --dearmor -o /etc/apt/keyrings/docker.gpg && \
    echo "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.gpg] https://download.docker.com/linux/ubuntu $(lsb_release -cs) stable" |\
    sudo tee /etc/apt/sources.list.d/docker.list > /dev/null && \
    apt-get update && apt-get install -y docker-ce docker-ce-cli containerd.io

# Set up the environment
WORKDIR /app

# Copy the repository files into the VM
COPY . /app

# Build the Docker image
RUN docker build -t growbot-image .

# Run the container
RUN docker run -d -p 5000:5000 growbot-image

# Expose the Flask application
#EXPOSE WEBSITE http://localhost:5000
