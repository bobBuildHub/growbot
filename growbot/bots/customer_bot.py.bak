"""
customer_bot.py: Handles customer-facing bot functionalities.
"""

import logging
from telegram import Update
from telegram.ext import ApplicationBuilder, CommandHandler, CallbackQueryHandler
from bots.commands.notification_commands import toggle_notifications_command
from bots.commands.status_commands import get_status

def start_customer_bot(token, config):
    """
    Starts the customer bot process.
    """
    logging.info("Starting Customer Bot...")
    app = ApplicationBuilder().token(token).build()

    # Add command handlers
    app.add_handler(CommandHandler("status", get_status))
    app.add_handler(CommandHandler("notifications", toggle_notifications_command))

    logging.info("Customer Bot is online and polling...")
    app.run_polling()
